<% if logged_in? %>
  <% if post.votes.where(user_id: current_user.id).blank? %>
    <%= link_to vote_post_path(voteable, vote: true), method: "post" do %>
      <span class=" glyphicon glyphicon-chevron-up"></span>
    <% end %>
    <%= link_to vote_post_path(voteable, vote: false), method: "post" do %>
      <span class=" glyphicon glyphicon-chevron-down"></span>
    <% end %>
  <% else %>
    <small>
      <%= link_to "Undo", undo_vote_post_path(voteable), method: "delete", data: { confirm: "Are you sure?" } %>
    </small>
  <% end %>
<% end %>
