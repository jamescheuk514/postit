$('#post_<%= @post.id %>_vote').html('<%= pluralize(@post.total_votes, "points") %>');
$('#post_<%= @post.id %>_vote_up').remove();
$('#post_<%= @post.id %>_vote_down').remove();
$('#post_<%= @post.id %>_vote_area').append('<small><%= link_to "Undo vote", undo_vote_post_path(@post), method: "delete", remote: true, id: "post_#{@post.id}_vote_undo" %></small>');
